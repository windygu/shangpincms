<script type="text/javascript">
    $(function () {
        var url = window.location.href;
        url = url.toLowerCase();
        if (url.indexOf("/subject/") > 0 || url.indexOf("/grouptime/") > 0) {
            $("#mx-leftmenu li:eq(0)").addClass('cur');
            $("#mx-leftmenu li:eq(0) p").show();
            var index = 0;
            if (url.indexOf("/sordmanage") > 0) {
                index = 1;
            }
            if (url.indexOf("/datastatisticsnew") > 0) {
                index = 2;
            }
            if (url.indexOf("/grouptime") > 0) {
                index = 3;
            }
            $("#mx-leftmenu li:eq(0) p > a:eq(" + index + ")").addClass('cur');
        }
        if (url.indexOf("/subjectconsole/") > 0) {
            $("#mx-leftmenu li:eq(1)").addClass('cur');
            $("#mx-leftmenu li:eq(1) p").show();
            var index = 0;
            if (url.indexOf("/subjectmonitor") > 0) {
                index = 0;
            }
            if (url.indexOf("/subjectmanage") > 0) {
                index = 1;
            }
            if (url.indexOf("/subjectwaiting") > 0) {
                index = 2;
            }
            if (url.indexOf("/datamonitor") > 0) {
                index = 3;
            }
            $("#mx-leftmenu li:eq(1) p > a:eq(" + index + ")").addClass('cur');
        }
//        if (url.indexOf("/topic") > 0) {
//            $("#mx-leftmenu li:eq(2)").addClass('cur');
//            $("#mx-leftmenu li:eq(2) p").show();
//            var index = 0;
//            if (url.indexOf("/manage") > 0) {
//                index = 1;
//            }
//            $("#mx-leftmenu li:eq(2) p > a:eq(" + index + ")").addClass('cur');
//        }
        if (url.indexOf("/channel") > 0 || url.indexOf("/mobilead")>0) {
            $("#mx-leftmenu li:eq(2)").addClass('cur');
            $("#mx-leftmenu li:eq(2) p").show();
            var index = 0;
            if (url.indexOf("/manage") > 0) {
                index = 1;
            }
            $("#mx-leftmenu li:eq(2) p > a:eq(" + index + ")").addClass('cur');
        }
        if (url.indexOf("/indexad") > 0) {
            $("#mx-leftmenu li:eq(3)").addClass('cur');
            $("#mx-leftmenu li:eq(3) p").show();
            var index = 0;
            if (url.indexOf("/manage") > 0) {
                index = 1;
            }
            $("#mx-leftmenu li:eq(3) p > a:eq(" + index + ")").addClass('cur');
        }

        if (url.indexOf("/adcoment") > 0) {
            $("#mx-leftmenu li:eq(4)").addClass('cur');
            $("#mx-leftmenu li:eq(4) p").show();
            var index = 0;
            if (url.indexOf("/manage") > 0) {
                index = 1;
            }
            $("#mx-leftmenu li:eq(4) p > a:eq(" + index + ")").addClass('cur');
        }
        if (url.indexOf("/notice") > 0) {
            $("#mx-leftmenu li:eq(5)").addClass('cur');
            $("#mx-leftmenu li:eq(5) p").show();
            //var index = 0;
//            if (url.indexOf("/manage") > 0) {
//                index = 1;
//            }
            //$("#mx-leftmenu li:eq(5) p > a:eq(" + index + ")").addClass('cur');
        }



        $("#mx-leftmenu li > a").toggle(function () {
            $(this).parent('li').find('p').show();
            $(this).parent('li').addClass('cur');
        }, function () {
            $(this).parent('li').find('p').hide();
            $(this).parent('li').find('p').removeClass('cur');
            $(this).parent('li').removeClass('cur');
        });

        $("#mx-leftmenu li").on('click', function () {
            var that = $(this),
			childLen = that.find('p').length;
            that.addClass('cur').siblings('li').removeClass('cur');
            $("#mx-leftmenu li").find('p').hide();
            if (childLen > 0) {
                that.find('p').show();
            }

        });
    });
</script>
