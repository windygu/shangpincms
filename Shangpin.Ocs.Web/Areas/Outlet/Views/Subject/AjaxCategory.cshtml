        <select id="select2" style="width: 100px;" @(ViewBag.CategoryNo == "" ? "disabled=disabled" : "") onchange="TwoChange(this.value);">
            <option value="">-- 二级品类 --</option>
            @foreach (var category in erpCategory)
            { 
                <option value="@category.CategoryNo" title="@category.CategoryName">@category.CategoryName</option>
            }
        </select>
        <span id="CategoryThreeSpan"> 
            <select id="select3" disabled="true" style="width: 100px;">
                <option value="">-- 三级品类 --</option>
            </select>
