@model IEnumerable<Shangpin.Ocs.Entity.Extenstion.ShangPin.SWfsBrandExtendList>

@{
    ViewBag.Title = "BrandPreviewList";
    Layout = "~/Areas/Shangpin/Views/Shared/_Layout.cshtml";
}

<script src="/Areas/Shangpin/Scripts/plug/comm.js" type="text/javascript"></script>
<script type="text/javascript" src="/Areas/outlet/Scripts/page/index/popDiv.js"></script>

<table>
    <tr>
        <th style=" width:80px; font-size:20px; height:60px;">
            编号
        </th>
        <th style=" width:100px; font-size:20px;">
            导航类型
        </th>
        <th style=" width:100px; font-size:20px;">
            店铺类型
        </th>
        <th style=" width:200px; font-size:20px;">
            品牌英文名称
        </th>
        <th style=" width:200px; font-size:20px;">
            品牌中文名称
        </th>
        <th style=" width:100px; font-size:20px;">
            状态
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BrandNo)
        </td>
        <td>
            @(item.NaviTypeId == 0 ? "专卖店" : "旗舰店")
        </td>
        <td>
            @(item.BrandTypeId == 0 ? "自动" : "手动")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BrandEnName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BrandCnName)
        </td>
        <td>
            @(item.Status == 0 ? "已发布" : "未发布")
        </td>
        <td>
            @Html.ActionLink("返回列表", "StoresList")
        </td>
    </tr>
}

</table>
