            $("#txtTopTopImgCodeM").focus(function () {
                if (this.value == this.defaultValue) this.value = '';
            });
            $("#txtTopTopImgCodeM").blur(function () {
                if (this.value == '') this.value = this.defaultValue;
            }); 

        });
        function CheckGroup() {
            if ($("#PicType").val() == 1) {
                if (!FlagEmpty("GroupName")) {
                    alert("分组名称不能为空");
                    return false;
                }
                if (!CountChar("GroupName", 12)) {
                    alert("活动名称为6汉字或者12字符");
                    return false;
                }
                if (!FlagEmpty("SortNo")) {
                    $("#SortNo").val("0");
                    return false;
                }
                if ($("#GroupImage").val() == "") {
                    alert("分组图不能为空");
                    return false;
                }
                if ($("#IphoneGroupImage").val() == "") {
                    alert("手机分组图不能为空,建议图片尺寸640*200");
                    return false;
                }
            } else if ($("#PicType").val() == 2) {
                if (!FlagEmpty("GroupName")) {
                    alert("分组名称不能为空");
                    return false;
                }
                if (!CountChar("GroupName", 12)) {
                    alert("活动名称为6汉字或者12字符");
                    return false;
                }
                if (!FlagEmpty("SortNo")) {
                    $("#SortNo").val("0");
                    return false;
                }

                if ($("#PuzzlePic1").val() == "") {
                    alert("顶通图不能为空");
                    return false;
                }
                //var img2 = $("#PuzzlePic2").val();
                if ($("#PuzzlePic2").val() == "") {
                    alert("左大图不能为空");
                    return false;
                }

                if ($("#PuzzlePic3").val() == "") {
                    alert("居上大图不能为空");
                    return false;
                }

                if ($("#PuzzlePic4").val() == "") {
                    alert("居下大图不能为空");
                    return false;
                }

                if ($("#PuzzlePic5").val() == "") {
                    alert("右大图不能为空");
                    return false;
                }

                if ($("#PuzzlePic6").val() == "") {
                    alert("小图1不能为空");
                    return false;
                }

                if ($("#PuzzlePic7").val() == "") {
                    alert("小图2不能为空");
                    return false;
                }

                if ($("#PuzzlePic8").val() == "") {
                    alert("小图3不能为空");
                    return false;
                }

                if ($("#PuzzlePic9").val() == "") {
                    alert("小图4不能为空");
                    return false;
                }

                if ($("#PuzzlePic10").val() == "") {
                    alert("小图5不能为空");
                    return false;
                }
            } else{ 
             }
            FormSubmit();
        }
        //判断文本框是否为空
        function FlagEmpty(Id) {
            var msg = $("#" + Id).val()
            if (msg == "" || msg == null || msg == undefined) {
                return false;
            }
            return true;
        }
        //判断字符个数
        function CountChar(id, len) {
            var msg = $("#" + id).val()
            var nums = msg.replace(/[^\x00-\xff]/g, "00").length;
            if (nums > len) {
                return false;
            }
            return true;
        }
        //提交
        function FormSubmit() {
            $("#formAddGroup").ajaxSubmit({
                success: function (html) {
                    if (typeof (html) == "string") {
                        var rs = html.substring(html.indexOf("{"), html.indexOf("}") + 1);
                        data = eval("(" + rs + ")");
                    }
                    else {
                        data = html;
                    }
                    if (data.result != "1") {
                        alert(data.message);
                        return false;
                    }
                    else if (data.result == "1") {
                        alert("分组新增成功！");
                        window.location = $("#BackURl").val();
                        return true;
                    }
                }
            })
        }

        function LinkUrl(id) {
            if ($("#linktext" + id).val().length > 0) {
                $("#ImagUrl" + id).attr("href", $("#linktext"+id).val())
                $("#ImagUrl" + id).attr("target", "_blank")
            }
            else {
                $("#ImagUrl" + id).attr("href", "#");
                $("#ImagUrl" + id).attr("target", "_self");
            }
        }
        function PicOpen() {

            if ($("#PicType").val() == 1) {
                $("#from1").show();
                $("#from2").hide();
                $("#from3").hide();
            } else if ($("#PicType").val() == 2) {
                $("#from2").show();
                $("#from1").hide();
                $("#from3").hide();
            } else {
                $("#from1").hide();
                $("#from2").hide();
                $("#from3").show();

            } 
        }
    </script>
}
