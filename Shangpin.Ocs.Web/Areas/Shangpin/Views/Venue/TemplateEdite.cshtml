    <style type="text/css">
        .gernalTclass {
            margin-top: 20px;
        }

            .gernalTclass td {
                padding: 5px;
            }

        fieldset {
            border: 1px solid #ccc;
            padding: 10px;
            min-height: 430px;
            overflow: auto;
        }

