            $(".tree_menu li").click(function (event) {
                event.stopPropagation(); 
                if ($(this).children().filter("ul:first").is(':hidden')) {
                    $(this).addClass("curr");
                    $(this).children().filter("ul:first").show();
                } else {
                    $(this).removeClass("curr");
                    $(this).children().filter("ul:first").hide();
                }
            });
