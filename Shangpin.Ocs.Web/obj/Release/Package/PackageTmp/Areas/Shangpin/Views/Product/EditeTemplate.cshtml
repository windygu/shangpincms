@model Shangpin.Entity.Wfs.SWfsProductTemplate
@using Shangpin.Ocs.Service.Common
@{
    ViewBag.Title = "编辑模板";
    Layout = "~/Areas/Shangpin/Views/Shared/_LayoutProduct.cshtml";
}
@section HeadStyle{
    <link href="/Areas/Shangpin/Content/css/page/rightcontent/brandcontent.css" rel="stylesheet" type="text/css" charset="utf-8" />
}
@section HeadScript{
    <script type="text/javascript">
        var saveContent = function () {
            if ($("#TemplateDirection").val().trim().length > 100) {
                alert("不能超过100字符");
                return;
            }
            if ($("#TemplateName").val().trim().length == 0) {
                alert("模板名称不能为空");
                return;
            }

            if ($("#TemplateCode").val().trim().length == 0) {
                alert("请填写web模板代码");
                return;
            }
            $("#saveForm").submit();
        }
    </script>
}
<h1>
    OCS > 尚品 > <a href="/Shangpin/product/TemplateList">模板列表</a> > 编辑模板
</h1>

<div class="mx-brandcontent-msgbox">
    <form action="/Shangpin/product/EditeTemplate" method="post" id="saveForm">
        <dl>
            <dt>
                模板编号:
            </dt>
            <dd>
                @Html.HiddenFor(model=>model.TemplateID)
                @Html.TextBoxFor(model => model.TemplateNO, new { @readonly = "readonly", maxlength = "100" })
            </dd>
        </dl>
        <dl>
            <dt>
                <span style="color:Red;">模板名称:</span>
            </dt>
            <dd>
                @Html.TextBoxFor(model => model.TemplateName, new { maxlength = "20" })
            </dd>
        </dl>
        <dl>
            <dt>
                模板描述:
            </dt>
            <dd>
                @Html.TextAreaFor(model => model.TemplateDirection, new { @rows = "3", cols = "100" })
            </dd>
        </dl>
        <dl>
            <dt>
                <span style="color:Red;">模板代码:</span>
            </dt>
            <dd>
                @Html.TextAreaFor(model => model.TemplateCode, new { @cols = "120", rows="12"})
            </dd>
        </dl>
        <dl>
            <dt>
               Mobile模板代码:
            </dt>
            <dd>
                @Html.TextAreaFor(model => model.TemplateCodeMobile, new { @cols = "120", rows="12"})
            </dd>
        </dl>
        <dl>
            <dt>&nbsp;&nbsp;</dt>
            <dd>
                <input type="button" onclick="saveContent()" value="保存" style="width: 90px; height: 27px; background-color: #4D90FE; border: 1px solid #3079ED;
                            color: #FFFFFF; cursor: pointer;"/>
                <input type="button" value="取消" style="width: 90px; height: 27px; background-color: #4D90FE; border: 1px solid #3079ED;
                            color: #FFFFFF; cursor: pointer;" onclick="window.location.href='/Shangpin/product/TemplateList'"/>
            </dd>
        </dl>
    </form>
</div>
@ViewData["tip"]