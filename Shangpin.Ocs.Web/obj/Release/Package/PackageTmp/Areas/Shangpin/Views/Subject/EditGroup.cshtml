@section HeadScript{
    <script src="/Areas/Shangpin/Scripts/lib/jquery.form.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            if ($("#PicType").val() == 2) {
                $("#from2").show();
                $("#from1").hide()
                $("#from3").hide();
            } else if ($("#PicType").val() == 1) {
                $("#from2").hide();
                $("#from1").show();
                $("#from3").hide();
            } else { 
                $("#from2").hide();
                $("#from1").hide();
                $("#from3").show();
             }
        });
        function CheckGroup() {
            if (!FlagEmpty("GroupName")) {
                alert("分组名称不能为空");
                return false;
            }
            if (!CountChar("GroupName", 12)) {
                alert("活动名称为6汉字或者12字符");
                return false;
            }
            if (!FlagEmpty("SortNo")) {
                $("#SortNo").val("0");
                return false;
            }
            
            FormSubmit();
            
        }
        //判断文本框是否为空
        function FlagEmpty(Id) {
            var msg = $("#" + Id).val()
            if (msg == "" || msg == null || msg == undefined) {
                return false;
            }
            return true;
        }
        //判断字符个数
        function CountChar(id, len) {
            var msg = $("#" + id).val()
            var nums = msg.replace(/[^\x00-\xff]/g, "00").length;
            if (nums > len) {
                return false;
            }
            return true;
        }
        //提交
        function FormSubmit() {
            $("#formAddGroup").ajaxSubmit({
                success: function (html) {
                    if (typeof (html) == "string") {
                        var rs = html.substring(html.indexOf("{"), html.indexOf("}") + 1);
                        data = eval("(" + rs + ")");
                    }
                    else {
                        data = html;
                    }
                    if (data.result != "1") {
                        alert(data.message);
                        return false;
                    }
                    else if (data.result == "1") {
                        alert("分组编辑成功！");
                        window.location = $("#BackURl").val();
                        return true;
                    }
                }
            })
        }
        //测试链接
        function LinkUrl() {
            if ($("#PicUrl").val().length > 0) {
                $("#testLink").attr("href", $("#PicUrl").val())
                $("#testLink").attr("target", "_blank");
            }
            else {
                $("#testLink").attr("href", "#");
                $("#testLink").attr("target", "_self");
            }
            if ($("#linktext").val().length > 0) {
                $("#ImagUrl").attr("href", $("#linktext").val())
                $("#ImagUrl").attr("target", "_blank")
            }
            else {
                $("#ImagUrl").attr("href", "#");
                $("#ImagUrl").attr("target", "_self");
            }
        }

        function PicOpen() {
            if ($("#PicType").val() == 1) {
                $("#from1").show();
                $("#from2").hide();
                $("#from3").hide();
            } else if ($("#PicType").val() == 2) {
                $("#from2").show();
                $("#from1").hide();
                $("#from3").hide();
            } else {
                $("#from2").hide();
                $("#from1").hide();
                $("#from3").show();
            }
        }
         
    </script>
}
