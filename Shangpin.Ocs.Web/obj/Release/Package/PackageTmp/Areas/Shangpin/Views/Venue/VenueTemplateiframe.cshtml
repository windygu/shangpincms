<script type="text/javascript">
    window.onload = function () {
        var Request = new Object();
        Request = GetRequest();
        var urlPara = Request['isChecked'];
        if (urlPara != null && urlPara != "") {
            if (urlPara.indexOf("rad") > -1) {
                SelectRadio(urlPara);
            }
        }
        if (Request['isHtml'] == "1") {
            $("a[name='ahtml']").show();
        }
        else {
            $("a[name='ahtml']").hide();
        }
    }

    function SelectRadio(id) {
        //debugger;
        document.getElementById(id).checked = true;

    }
    //获取url参数
    function GetRequest() {
        var url = location.search; //获取url中"?"符后的字串
        var theRequest = new Object();
        if (url.indexOf("?") != -1) {
            var str = url.substr(1);
            strs = str.split("&");
            for (var i = 0; i < strs.length; i++) {
                theRequest[strs[i].split("=")[0]] = unescape(strs[i].split("=")[1]);
            }
        }
        return theRequest;
    }
    //清除会场缓存
    function ClearVenueCache(venueid) {
        $.get("/shangpin/venue/ClearVenueCach/" + venueid, function (data) {
            //alert(data);
        });
    }

    //需要跳转的页面
    function backUrl(url) {
        window.location.href = url
    }

    function UpdateHtml(ispre, ismobile, rad, isHtml) {
        window.location.href = '/Shangpin/Venue/VenueTemplateiframe?venueID=@Model.MeetingID&currentTemplateNO=@templateId&isPreView=' + ispre + '&isMobile=' + ismobile + '&isChecked=' + rad + '&isHtml=' + isHtml;

    }

    function SaveVenueHtml() {
        var html = $("#txtHtml").val();
        $.post("/Shangpin/Venue/SaveVenueHtml", { 'MeetingID': $("#MeetingID").val(), 'isPreView': $("#isPreView").val(), 'isMobile': $("#isMobile").val(), 'venuehtml': html }, function (data) {
            if (data == "1") {
                alert("保存成功");
            } else if (data == "0") {
                alert("保存失败" + data);
            }
            else {
                alert("保存失败!图片位置编号" + data + "重复！");
            }
        });
    }
</script>
