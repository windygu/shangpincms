@{
    string tempTemplateCode = string.Empty;
    if (string.IsNullOrEmpty(isPreView) || string.IsNullOrEmpty(isMobile))
    {
        tempTemplateCode = "";
    }
    else
    {
        string html = string.Empty;
        if (templateInfo != null)
        {
            SWfsMeetingInfoHtml htmlModel = service.GetHtmlByMeetingId(Model.MeetingID);
            if (isPreView == "0" && isMobile == "0")
            {
                if (htmlModel != null && htmlModel.TemplateType.Substring(0, 1) == "0" && !string.IsNullOrEmpty(htmlModel.MobilePreViewCode))
                {
                    tempTemplateCode = htmlModel.MobilePreViewCode;
                }
                else
                {
                    if (!string.IsNullOrEmpty(Model.MobilePreViewCode))
                    {
                        tempTemplateCode = Model.MobilePreViewCode;//移动预热
                    }
                    else
                    {
                        tempTemplateCode = templateInfo.TemplateCode;
                    }
                }
            }
            else if (isPreView == "1" && isMobile == "0")
            {
                if (htmlModel != null && htmlModel.TemplateType.Substring(1, 1) == "0" && !string.IsNullOrEmpty(htmlModel.MobileStartCode))
                {
                    tempTemplateCode = htmlModel.MobileStartCode;
                }
                else
                {
                    if (!string.IsNullOrEmpty(Model.MobileStartCode))
                    {
                        tempTemplateCode = Model.MobileStartCode;//移动开始
                    }
                    else
                    {
                        tempTemplateCode = templateInfo.TemplateCode;
                    }
                }
            }
            else if (isPreView == "0" && isMobile == "1")
            {
                if (htmlModel != null && htmlModel.TemplateType.Substring(2, 1) == "0" && !string.IsNullOrEmpty(htmlModel.WebPreViewCode))
                {
                    tempTemplateCode = htmlModel.WebPreViewCode;
                }
                else
                {
                    if (!string.IsNullOrEmpty(Model.WebPreViewCode))
                    {
                        tempTemplateCode = Model.WebPreViewCode;//web预热模板
                    }
                    else
                    {
                        tempTemplateCode = templateInfo.TemplateCode;
                    }
                }
            }
            else if (isPreView == "1" && isMobile == "1")
            {
                if (htmlModel != null && htmlModel.TemplateType.Substring(3) == "0" && !string.IsNullOrEmpty(htmlModel.WebStartCode))
                {
                    tempTemplateCode = htmlModel.WebStartCode;
                }
                else
                {
                    if (!string.IsNullOrEmpty(Model.WebStartCode))
                    {
                        tempTemplateCode = Model.WebStartCode; //web进行中模板
                    }
                    else
                    {
                        tempTemplateCode = templateInfo.TemplateCode;
                    }
                }
            }
            else if (templateInfo != null)
            {
                tempTemplateCode = templateInfo.TemplateCode;
            }

            IList<SWfsMeetingTemplatePicInfo> tempPicList = service.GetTemplatePicListByTID(templateInfo.MettingNo, 2);
            IEnumerable<SWfsMeetingRelationRegion> region = venueService.GetRelationRegionList(Model.MeetingNO, templateId);
            if (!string.IsNullOrEmpty(tempTemplateCode))
            {
                if (tempPicList != null && tempPicList.Count() > 0)
                {
                    // 以 “<img”分割对象，下面做字符串查找，截取
                    string[] _tempTemplateCode = tempTemplateCode.Split(new string[] { "<img" }, StringSplitOptions.None);

                    for (int i = 0; i < _tempTemplateCode.Length; i++)
                    {
                        if (!string.IsNullOrEmpty(_tempTemplateCode[i]))
                        {
                            string singleData = _tempTemplateCode[i];
                            if (singleData.IndexOf("lazy=\"") > -1 && singleData.IndexOf("src=\"") > -1)
                            {
                                string tempUrl = singleData.Substring((singleData.IndexOf("lazy=\"") + 6));
                                if (tempUrl.IndexOf("\"") > -1)
                                {
                                    //当前全路径
                                    tempUrl = tempUrl.Substring(0, (tempUrl.IndexOf("\"")));
                                    if (tempUrl.LastIndexOf("/") > -1)
                                    {
                                        //得到模版中的图片名称，判断
                                        string tempCodeImg = tempUrl.Substring((tempUrl.LastIndexOf("/") + 1));
                                        List<SWfsMeetingTemplatePicInfo> singleEntity = tempPicList.Where(c => c.FileName == tempCodeImg && c.Type == 2).ToList();
                                        if (singleEntity != null && singleEntity.Count() > 0)
                                        {
                                            //替换
                                            tempTemplateCode = tempTemplateCode.Replace(tempUrl, Shangpin.Framework.WebMvc.ServicePic.ResolveUGCImage("2", singleEntity[0].PicNo, 0, 0));
                                        }
                                    }
                                }
                            }
                            else if (singleData.IndexOf("lazy=\"") == -1 && singleData.IndexOf("src=\"") > -1)
                            {
                                string tempUrl = singleData.Substring((singleData.IndexOf("src=\"") + 5));
                                if (tempUrl.IndexOf("\"") > -1)
                                {
                                    //当前全路径
                                    tempUrl = tempUrl.Substring(0, (tempUrl.IndexOf("\"")));
                                    if (tempUrl.LastIndexOf("/") > -1)
                                    {
                                        //得到模版中的图片名称，判断
                                        string tempCodeImg = tempUrl.Substring((tempUrl.LastIndexOf("/") + 1));
                                        List<SWfsMeetingTemplatePicInfo> singleEntity = tempPicList.Where(c => c.FileName == tempCodeImg && c.Type == 2).ToList();
                                        if (singleEntity != null && singleEntity.Count() > 0)
                                        {
                                            //替换
                                            singleData = singleData.Replace(tempUrl, Shangpin.Framework.WebMvc.ServicePic.ResolveUGCImage("2", singleEntity[0].PicNo, 0, 0));
                                        }
                                    }
                                }
                                tempTemplateCode = tempTemplateCode.Replace(_tempTemplateCode[i], singleData);
                            }
                        }
                    }
                }
                tempTemplateCode = Regex.Replace(tempTemplateCode, "src=\"/images/e.gif\"", "src=\"http://pic12.shangpin.com/images/e.gif\"");
            }
        }
    }
    if (string.IsNullOrEmpty(tempTemplateCode) && !string.IsNullOrEmpty(isPreView))
    {
        tempTemplateCode = "请选择模板";
    }
}
